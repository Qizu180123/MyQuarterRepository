<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.menglucywhh.myquarter.view.activity.Hotplay">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/yxh4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/yxh4"/>
        <ImageView
            android:id="@+id/yxh3"
            android:layout_marginLeft="60dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/yxh1"/>
        <ImageView
            android:id="@+id/yxh2"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/yxh2"/>
        <ImageView
            android:id="@+id/yxh1"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/yxh3"/>

      <com.facebook.drawee.view.SimpleDraweeView
          android:id="@+id/yxh"
          android:layout_marginLeft="280dp"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:background="@drawable/female"
          fresco:roundAsCircle="true"/>

    </LinearLayout>
   <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
       android:id="@+id/bofang"
       android:layout_width="match_parent"
       android:layout_height="300dp"></fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  王老吉和加多宝干仗，和其正倒闭了"
        android:textSize="30dp"
        android:id="@+id/title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="  153960次播放 今天15:16"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/yxh"/>
</LinearLayout>
