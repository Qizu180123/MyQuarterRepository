<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBEBEB"
    android:id="@+id/hotattention_linear"
    tools:context="com.example.menglucywhh.myquarter.view.activity.HotAttentionActivity">

    <RelativeLayout
        android:id="@+id/hotattention_title"
        android:background="#03A9F4"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >

        <TextView
            android:paddingTop="22dp"
            android:id="@+id/quxiao"
            android:textSize="22sp"
            android:textColor="#fff"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:paddingTop="22dp"
            android:textSize="23sp"
            android:textColor="#fff"
            android:text="热门关注"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

      <LinearLayout
          android:id="@+id/hotattention_shurulinear"
          android:padding="5dp"
          android:layout_marginTop="15dp"
          android:background="@drawable/text_shape"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

          <EditText
              android:id="@+id/hotattention_shuru"
              android:background="@null"
              android:textColor="#BFBFBF"
              android:textSize="20sp"
              android:hint="输入关键字      "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

          <ImageView
              android:id="@+id/hotattention_sousuo"
              android:layout_gravity="center_vertical"
              android:src="@drawable/sousuo"
              android:layout_width="30dp"
              android:layout_height="30dp" />
      </LinearLayout>
    </RelativeLayout>

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/xTablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:xTabMode="scrollable"
        app:xTabIndicatorColor="#03A9F4"
        app:xTabIndicatorHeight="5dp"
        app:xTabIndicatorWidth="100dp"
        app:xTabSelectedTextColor="#03A9F4"
        app:xTabTextColor="#555555"
        app:xTabTextSize="21sp"
        app:xTabMinWidth="80dp"
        app:xTabMaxWidth="480dp"
        android:background="#ffffff"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="2000dp"
        android:layout_alignParentBottom="true" />
</LinearLayout>
