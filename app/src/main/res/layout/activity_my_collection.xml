<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mycollection_linear"
    tools:context="com.example.menglucywhh.myquarter.view.activity.MyCollectionActivity">

    <RelativeLayout
        android:id="@+id/mycollection_title"
        android:background="#03A9F4"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="14dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >

        <TextView
            android:paddingTop="20dp"
            android:id="@+id/fanhui"
            android:textSize="22sp"
            android:textColor="#fff"
            android:text="返回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            android:textSize="22sp"
            android:textColor="#fff"
            android:text="我的收藏"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mycollection_delete"
            android:layout_alignParentRight="true"
            android:paddingTop="20dp"
            android:textSize="22sp"
            android:textColor="#fff"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mycollection_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
