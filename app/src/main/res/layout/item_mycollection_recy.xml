<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ImageView
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:id="@+id/item_gouxuan"
        android:src="@drawable/weigouxuan"
        android:layout_width="26dp"
        android:layout_height="26dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_centerVertical="true"
            fresco:roundAsCircle="true"
            android:id="@+id/touxiang"
            fresco:placeholderImage="@drawable/sliding_touxiang"
            android:layout_width="55dp"
            android:layout_height="55dp" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_nickname"
                android:textStyle="bold"
                android:textColor="#d92d2d"
                android:textSize="22sp"
                android:text="天蝎喝牛奶"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="7dp"
                android:paddingLeft="10dp"
                android:id="@+id/item_time"
                android:textColor="#101010"
                android:textSize="15sp"
                android:text="2017-05-07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="60dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="invisible"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="屏蔽Ta"
                android:id="@+id/item_pingbi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/pingbi" />

        <TextView
            android:visibility="invisible"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="  举报"
            android:drawableTop="@drawable/jubao"
            android:id="@+id/item_jubao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <TextView
            android:visibility="invisible"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:id="@+id/item_fuzhilianjie"
            android:textColor="#000"
            android:text="  链接"
            android:drawableTop="@drawable/fuzhilianjie"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/gengduo"
                android:id="@+id/item_gengduo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="38dp"
                />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_text"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="天气美美的,适合郊游"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:layout_marginTop="10dp"
            android:id="@+id/jcvideoplayer"
            android:layout_width="match_parent"
            android:layout_height="270dp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:textColor="#03A9F4"
            android:text="骑猪上高速 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:textSize="20sp"
                android:textColor="#555555"
                android:text=" : 不错"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textColor="#03A9F4"
                android:text="骑猪上高速 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="20sp"
                android:textColor="#555555"
                android:text=" : 不错"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>